<div class="container py-5" style="max-width: 540px">
	<h1>New Car</h1>

	<%= form_with model: @car do |f| %>

		<div>
		  <%= f.label "Марка", class: "form-label" %>
			<select class="form-select mb-3" aria-label="Large select example">
				
				<%# <%= f.text_field :make, required: true, class: "form-control" %> %>
				<option selected></option>
				<option value="1">Toyota</option>
				<option value="2">Hyundai</option>
				<option value="3">Kia</option>
				<option value="4">Nissan</option>
			</select>
		</div>


		<div class="mb-3">
			<%= f.label "Модель", class: "form-label" %>
			<%= f.text_field :mode, required: true, class: "form-control" %>
		</div>

		<div class="mb-3">
			<%= f.label "Год", class: "form-label" %>
			<%= f.text_field :year, required: true, class: "form-control" %>
		</div>
		
		<div class="mb-3">
			<%= f.label "Цена", class: "form-label" %>
			<%= f.text_field :price, required: true, class: "form-control" %>
		</div>

		<div class="mb-3">
			<%= f.label "Фото", class: "form-label" %>
			<%= f.file_field :image, class: "form-control" %>
		</div>

		<%= f.submit "Создать объявление", class: "btn btn-primary" %>
	<% end %>
</div>